<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentoTipop">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/botonAmericanop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:onClick="americanop"
            android:text="americano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <Button
            android:id="@+id/botonAsiaticop"
            android:layout_width="101dp"
            android:layout_height="38dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="16dp"
            android:onClick="asiaticop"
            android:text="asiatico"
            app:layout_constraintBottom_toTopOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <Button
            android:id="@+id/botonEuropeop"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="146dp"
            android:onClick="europeop"
            android:text="europeo "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.266"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="218dp"
            android:layout_height="101dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/usd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="220dp"
            android:layout_height="87dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/asia"
            app:layout_constraintBottom_toTopOf="@+id/botonAsiaticop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonAmericanop" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="199dp"
            android:layout_height="86dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/europacaptura"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonAsiaticop" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>