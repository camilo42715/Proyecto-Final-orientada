<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentoMaster">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/botonAmericano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="131dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="149dp"
            android:text="Americano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/botonEuropeo"
            android:layout_width="103dp"
            android:layout_height="45dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="150dp"
            android:text="Europeo "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonAmericano" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="333dp"
            android:layout_height="24dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="232dp"
            android:layout_marginEnd="20dp"
            android:text="Porfavor elegir el origen de carro de su preferencia"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonAsiatico"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="131dp"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="33dp"
            android:text="Asiatico"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>