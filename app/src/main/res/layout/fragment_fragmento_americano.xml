<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentoAmericano">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/botonDodge"
            android:layout_width="103dp"
            android:layout_height="37dp"
            android:layout_marginTop="13dp"
            android:text="dodge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView24" />

        <Button
            android:id="@+id/botonChevrolet"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="chevrolet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView23" />

        <Button
            android:id="@+id/botonFord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="ford"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="188dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ford"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonChevrolet" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="219dp"
            android:layout_height="82dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/chevrolet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonDodge" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="265dp"
            android:layout_height="107dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="62dp"
            android:src="@drawable/dogfelogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>